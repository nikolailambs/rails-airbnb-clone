

  <div class="landing-background">
<div class="text-center search-position">
    <div class="headline">
      <h1>Ninja offices</h1>
      <h3>Search for an office to stay</h3>
    </div>
    <div class="search-form">
      <%= form_for(:search, url: offices_path, method: :get) do |f| %>
        <%= f.text_field :address_search, label: "Address", placeholder: "Friedrichstr. 24, Berlin" %>
        <%= f.select :size_search, [["1 Person"], ["1-10 Persons"], ["10-50 Persons"], ["50-100 Persons"]], { label: "Choose your favorite fruit:" } %>
        <%= f.submit 'Search' %>
      <% end %>
    </div>
  </div>
</div>


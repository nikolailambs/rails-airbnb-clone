
<div class="no-margin index-container">
  <div class="cards">

    <div class="form-inlin filter-card">
      <div class="form-groupe">
        <p class="filters-period">
          <label>
            <input type="radio" name="filter-one" value=".hourly" checked="checked" /> hourly
          </label>
          <label>
            <input type="radio" name="filter-one" value=".daily" /> daily
          </label>
          <label>
            <input type="radio" name="filter-one" value=".weekly" /> weekly
          </label>
          <label>
            <input type="radio" name="filter-one" value=".monthly" /> monthly
          </label>
        </p>
      </div>
      <div class="form-groupe">
        <p class="filters-price">
          <label>
            <input type="radio" name="filter-two" data-min="1" data-max="100" value="SmallerThan100" /> 1€-100€
          </label>
          <label>
            <input type="radio" name="filter-two" data-min="100" data-max="500" value="SmallerThan500" /> 100€-500€
          </label>
          <label>
            <input type="radio" name="filter-two" data-min="500" data-max="10000000" value="BigggerThan500" /> 500€+
          </label>
        </p>
      </div>
    </div>

        <div class="grid">
          <div class="row">
           <% @offices.each do |office| %>
           <div class="col-xs-12 col-md-4">
            <% main_photo = office.photos[0] %>
            <div class="office-card" data-price="<%= office.price %>" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%= cl_image_path main_photo.path, crop: :fill %>');">
              <div class="card-category"><%= office.office_type %></div>
              <div class="card-description">
                <h5><%= office.address %></h5>

                  <p class="price-tag"><%= office.price %>€ per hour</p>

              </div>
              <% if office.user %>
              <%= image_tag office.user.facebook_picture_url, class: "card-user" %>
              <% end %>
              <%= link_to "", office_path(office), class: "card-link" %>
            </div>
          </div>
          <% end %>
        </div>
      </div>
    </div>

    <div id="map" class="index-map"></div>

    <% content_for(:after_js) do %>
    <%= javascript_tag do %>
    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: { id: 'map' } }, function() {
    markers = handler.addMarkers(<%= raw @hash.to_json %>);
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
    if (markers.length == 0) {
    handler.getMap().setZoom(2);
  } else if (markers.length == 1) {
  handler.getMap().setZoom(14);
}
});
<% end %>
<% end %>

</div>

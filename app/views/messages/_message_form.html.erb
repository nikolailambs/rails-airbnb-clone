<%= simple_form_for [message.office, Message.new] do |f| %>
  <%= f.hidden_field :reply, as: :boolean, value: true %>
  <%= f.input :title %>
  <%= f.input :content %>
  <%=f.hidden_field :office_id, value: message.office_id %>
  <%= f.submit 'Reply', class: 'no-border yellow-btn btn btn-primary btn-lg' %>
<% end %>
